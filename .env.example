# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
BOT_PREFIX=!
BOT_STATUS=Powered by Gemini 1.5

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=1024
# Controls randomness: 0.0 for deterministic, 1.0 for creative answers
GEMINI_TEMPERATURE=0.7
# Controls diversity: 0.0-1.0, higher values consider less likely responses
GEMINI_TOP_P=0.9
# Limits vocabulary: 1-40, lower limits words considered
GEMINI_TOP_K=40
# System instructions for the AI assistant
GEMINI_SYSTEM_INSTRUCTIONS=You are a helpful, creative, and friendly AI assistant named Gemini. You are having a conversation through Discord.

# Auto-response Configuration
# Comma-separated list of channel IDs where the bot auto-responds to all messages
# Example: AUTO_RESPONSE_CHANNELS=123456789,987654321
AUTO_RESPONSE_CHANNELS=
# Messages starting with these prefixes will be ignored in auto-response channels
AUTO_RESPONSE_IGNORE_PREFIX=!,/
# Cooldown seconds between auto-responses in the same channel
AUTO_RESPONSE_COOLDOWN=10

# Conversation Memory Configuration
# Enable/disable conversation memory (true/false)
ENABLE_CONVERSATION_MEMORY=true
# Maximum number of messages to remember in conversation history
MAX_CONVERSATION_HISTORY=10
# Time in seconds before conversation memory expires (3600 = 1 hour)
CONVERSATION_MEMORY_EXPIRY=3600
# Number of past messages to show in conversation preview
CONVERSATION_PREVIEW_LENGTH=3

# Admin Configuration
# Name of the Discord role that grants admin access to bot commands
ADMIN_ROLE_NAME=Bot Admin
# Comma-separated list of Discord user IDs with owner privileges
# Example: BOT_OWNERS=123456789,987654321
BOT_OWNERS=

# Mood Indicator Configuration
# Enable/disable mood indicators (true/false)
ENABLE_MOOD_INDICATOR=true
# Probability (0.0-1.0) that the bot will change mood between responses
MOOD_CHANGE_PROBABILITY=0.2

# Bot Settings
# Cooldown seconds between !ask commands
COMMAND_COOLDOWN=5
